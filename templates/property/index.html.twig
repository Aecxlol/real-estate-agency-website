{% extends 'base.html.twig' %}

{% block title %}Liste des biens{% endblock %}

{% block pageTitle %}<h1>Liste des biens de l'agence</h1>{% endblock %}
{% block pageDescription %}
    <p>Vous pouvez consulter et acheter les biens que nous proposons</p>
{% endblock %}

{% block body %}
    <div class="jumbotron">
        {{ form_start(form) }}
            <div class="form-row align-items-end">
                <div class="col">
                    {{ form_row(form.minSurface) }}
                </div>
                <div class="col">
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col">
                    {{ form_row(form.options) }}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button class="btn btn-primary">Rechercher</button>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
    <div class="row">
        {% for property in properties %}
        
            <div class="col-md-4">
                    {% include 'property/property.html.twig' %}
            </div>
        
        {% endfor %}
    </div>
    <div class="pagination">
        {{ knp_pagination_render(properties) }}
    </div>
{% endblock %}
